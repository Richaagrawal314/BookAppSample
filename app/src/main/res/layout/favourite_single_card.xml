<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/white"
    android:layout_margin="2dp">

    <LinearLayout
        android:id="@+id/llFavLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="11">

        <ImageView
            android:id="@+id/imgFavBook"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.8"
            android:background="#f5f5f5"
            android:contentDescription="@string/book_image"
            android:scaleType="fitCenter"
            android:src="@drawable/chrysanthemum" />

        <TextView
            android:id="@+id/txtFavTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/sample_text"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtFavAuthor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/sample_text"
            android:textColor="#5F5959"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtFavPrice"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/price"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtFavRating"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.7"
            android:drawableStart="@drawable/ic_star_black_24dp"
            android:gravity="center"
            android:text="@string/_4_5"
            android:textColor="#FFC107"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.cardview.widget.CardView>